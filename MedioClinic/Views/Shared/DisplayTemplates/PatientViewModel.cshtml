@model MedioClinic.Models.Profile.PatientViewModel

@{ 
    var controller = ViewContext.RouteData.Values.FirstOrDefault(value => value.Key.Equals("controller", StringComparison.OrdinalIgnoreCase)).Value.ToString();
    var action = ViewContext.RouteData.Values.FirstOrDefault(value => value.Key.Equals("action", StringComparison.OrdinalIgnoreCase)).Value.ToString();
}

@using (Html.BeginForm(action, controller, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <h4>Patient's Profile Page</h4>
        </div>
        <div class="row section">
            <p>@Html.Raw(ViewBag.Message)</p>
            @Html.DisplayFor(m => m.CommonUserViewModel)
        </div>
    </div>
}